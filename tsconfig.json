{
  "compilerOptions": {
     "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "@config/*": [
        "./src/config/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@entities/*": [
        "./src/entities/*"
      ],
      "@plugins/*": [
        "./src/plugins/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}
